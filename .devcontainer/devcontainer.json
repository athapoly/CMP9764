// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": " CMP9764 Teaching Devcontainer",
	"image": "ghcr.io/athapoly/cmp9764_dock:latest",

	"forwardPorts": [5801],
	"portsAttributes": {
		"5801": {
			"label": "desktop",
			"onAutoForward": "openBrowser"
		}
	},

	"postStartCommand": "/opt/entrypoint.sh /bin/true; .devcontainer/post-create.sh",

	"remoteUser": "lcas",
	"updateRemoteUserUID": true, // ensure internal user has the same UID as the host user and update file permissions
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"GitHub.vscode-pull-request-github",
				"ms-vscode.cpptools",
				"JaehyunShim.vscode-ros2",
				"nonanonno.vscode-ros2",
				"deitry.colcon-helper",
				"github.vscode-github-actions"
			]
		}
	},
	"hostRequirements": {
		"gpu": "optional",
		"cpus": 2,
		"memory": "8gb"
	}
}